<EncodeWindow>:
    name: "encode"

    GridLayout:
        cols:1
        size: root.width, root.height
        padding: 60
        spacing: 60
    
        GridLayout:
            cols:1
            padding: -80
            Image:
                source: "LogoTransp.png"
                allow_stretch: False
                keep_ratio: True
            # Label:
            #     id: elabel
            #     text: "Enter the message to be encoded:"
            #     font_size:21
            #     font_name: 'Framd'
            #     color: "#458028"

        GridLayout:
            cols:2
            spacing:20
            padding:10
            TextInput:
                id: emessage
                hint_text: 'Input your message here.'
                multiline: False
                font_size: 19
                font_name: 'Framd'
                padding: 35
                size_hint: (1,0.5)
            Button:
                size_hint: (0.2,0.75)
                background_normal: "clipboard.png"
                allow_stretch: False
                keep_ratio: True
                background_down: "clipboard.png"
                allow_stretch: False
                keep_ratio: True
                on_press: root.Copy()
        GridLayout:
            cols:2
            spacing:30
            padding: 5
            Button:
                text: "ENCODE"
                size_hint: (1,0.5)
                font_name: 'Framd'
                bold:True
                background_color: "#458028"
                on_press: root.EncodeEn()
            Button:
                text: "RETURN"
                size_hint: (1,0.5)
                font_name: 'Framd'
                bold:True
                background_color: "#458028"
                on_release: app.root.current = "main"        
