#:kivy 2.1.0

WindowManager:
    Languages:
    MainWindow:
    PantallaPrincipalEsp:
    PantallaPrincipalCat:
    EncodeWindow:
    DecodeWindow:
    Encodificador:
    Decodificador:
    EncodificadorCat:
    DecodificadorCat:

<Languages>:
    name:"lan"

    GridLayout:
        cols: 1
        size: root.width, root.height
        padding: 50
        spacing: 20

        Button:
            text: "ENGLISH"
            size_hint: (1,0.5)
            font_name: 'Framd'
            bold:True
            background_color: "#458028"
            on_release: app.root.current = "main"
        Button:
            text: "ESPAÑOL"
            size_hint: (1,0.5)
            font_name: 'Framd'
            bold:True
            background_color: "#458028"
            on_release: app.root.current = "espprincipal"
        Button:
            text: "CATALÀ"
            size_hint: (1,0.5)
            font_name: 'Framd'
            bold:True
            background_color: "#458028"
            on_release: app.root.current = "catprincipal"
<MainWindow>:
    name: "main"

    GridLayout:
        cols:2
        size: root.width, root.height
        padding: 50
        spacing: 20
     
        Image:
            source: "LogoTransp.png"
            allow_stretch: False
            keep_ratio: True
        Label:
            text: "Please, select a mode."
            font_size:30
            font_name: 'Framd'
            color: "#458028"
        Button:
            text: "ENCODE"
            size_hint: (1,0.5)
            font_name: 'Framd'
            bold:True
            background_color: "#458028"
            on_release: app.root.current = "encode"
        Button:
            text: "DECODE"
            size_hint: (1,0.5)
            font_name: 'Framd'
            bold:True
            background_color: "#458028"
            on_release: app.root.current = "decode"
